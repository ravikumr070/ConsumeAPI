<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] | @TempData.Peek("Name")</title>
    <link rel="icon" href="/img/favicon.png" type="image/ico" />
    @RenderSection("Styles", required: false)
    @*<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">*@
    <link href="~/css/styles.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" asp-append-version="true">
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        @if (TempData["URLId"] != null)
        {
            var urlP = TempData.Peek("URLId");
            <nav class="main-header navbar navbar-expand-md navbar-light navbar-cyan">
                <div class="container">
                    <a asp-page="Index" asp-route-id="@urlP" class="navbar-brand">

                        <span class="brand-text font-weight-bolder">@TempData.Peek("Name")</span>
                    </a>

                    <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                        <!-- Left navbar links -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-page="Index" asp-route-id="@urlP" class="nav-link"> Home </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="Organization" asp-route-id="@urlP" class="nav-link"> Experiance </a>

                            </li>
                            <li class="nav-item">
                                <a asp-page="Projects" asp-route-id="@urlP" class="nav-link"> Projects </a>

                            </li>
                            <li class="nav-item">
                                <a asp-page="Clients" asp-route-id="@urlP" class="nav-link"> Clients </a>

                            </li>
                            <li class="nav-item">
                                <a asp-page="Skills" asp-route-id="@urlP" class="nav-link"> Skills </a>

                            </li>
                            <li class="nav-item">
                                <a asp-page="MyServices" asp-route-id="@urlP" class="nav-link"> Services </a>

                            </li>
                            <li class="nav-item">
                                <a asp-page="Educations" asp-route-id="@urlP" class="nav-link"> Educations </a>

                            </li>

                        </ul>

                        <!-- SEARCH FORM -->

                    </div>

                    <!-- Right navbar links -->

                </div>
            </nav>
        }


        <div class="content-header">
            <div class="container">

            </div><!-- /.container-fluid -->
        </div>

        <div class="content">
            <div class="container">

                <div class="col-lg-12">
                    @RenderBody()
                </div>

            </div>

        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @System.DateTime.Now.Year <a href="#">@TempData.Peek("Name")</a>.</strong> All rights reserved.
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/js/scripts.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
